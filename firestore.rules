rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only read and write to their own document.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Public read access for most data.
    // Writes are enabled for products and experiments to allow for demoing
    // the "Add Product" and "Add Experiment" features.

    match /products/{productId} {
      allow get, list: if true;
      allow create, update, delete: if request.auth != null;
    }

    match /products/{productId}/{subcollection}/{docId} {
      allow get, list: if true;
      allow create, update, delete: if request.auth != null;
    }

    match /experiments/{experimentId} {
       allow get, list: if true;
       allow create, update, delete: if request.auth != null;
    }

    match /emergencyEvents/{eventId} {
       allow get, list: if true;
       // Keep emergency events read-only from client for safety
       allow create, update, delete: if false;
    }
  }
}
